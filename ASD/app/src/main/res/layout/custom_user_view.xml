<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- 커스텀리스트 -->
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:scaleType="fitXY"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/bluelagoon"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <TextView
            android:id="@+id/cocktailName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            android:text="Name"
            android:textColor="#566270"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/cocktailBase1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="345dp"
            android:layout_marginTop="26dp"
            android:gravity="center_vertical"
            android:text="Base"
            android:textColor="#566270"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_sugar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="40dp"
            android:textSize="15sp"
            android:textColor="#566270"
            android:text="당도" />

        <TextView
            android:id="@+id/tv_alcohol1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="70dp"
            android:textSize="15sp"
            android:textColor="#566270"
            android:text="도수" />

        <TextView
            android:id="@+id/tv_body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="100dp"
            android:textSize="15sp"
            android:textColor="#566270"
            android:text="바디감" />

        <TextView
            android:id="@+id/tv_unique1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="130dp"
            android:textSize="15sp"
            android:textColor="#566270"
            android:text="독특함" />

        <RatingBar
            android:id="@+id/rb_sugar1"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="38dp"
            android:layout_marginRight="30dp"
            android:isIndicator="true"
            android:progressTint="#566270"
            android:secondaryProgressTint="#566270"
            android:scaleX=".8"
            android:scaleY=".7"
            android:stepSize="0.1"
            android:transformPivotX="0dp"
            android:transformPivotY="0dp" />

        <RatingBar
            android:id="@+id/rb_alcohol1"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="69dp"
            android:layout_marginRight="30dp"
            android:progressTint="#566270"
            android:secondaryProgressTint="#566270"
            android:isIndicator="true"
            android:scaleX=".8"
            android:scaleY=".7"
            android:stepSize="0.1"
            android:transformPivotX="0dp"
            android:transformPivotY="0dp" />

        <RatingBar
            android:id="@+id/rb_body1"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="99dp"
            android:layout_marginRight="30dp"
            android:progressTint="#566270"
            android:secondaryProgressTint="#566270"
            android:isIndicator="true"
            android:scaleX=".8"
            android:scaleY=".7"
            android:stepSize="0.1"
            android:transformPivotX="0dp"
            android:transformPivotY="0dp" />

        <RatingBar
            android:id="@+id/rb_unique1"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="129dp"
            android:layout_marginRight="30dp"
            android:isIndicator="true"
            android:progressTint="#566270"
            android:secondaryProgressTint="#566270"
            android:numStars="5"
            android:scaleX=".8"
            android:scaleY=".7"
            android:stepSize="0.1"
            android:transformPivotX="0dp"
            android:transformPivotY="0dp" />

        <Button
            android:id="@+id/btn_delete1"
            android:background="@drawable/button_design"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="9dp"
            android:layout_marginBottom="7dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:focusable="false"
            android:textSize="10sp"
            android:textColor="#566270"
            android:text="삭제" />

    </RelativeLayout>
</RelativeLayout>