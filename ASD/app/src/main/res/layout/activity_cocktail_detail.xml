<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".CocktailDetailActivity">

    <android.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#a593e0"
        app:contentInsetStart="0dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">
        <TextView
            android:id="@+id/txv_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Detail"
            android:textColor="#566270"
            android:textSize="20sp" />
    </android.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="458dp"
        android:layout_marginTop="70dp">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_cocktail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="135dp"
            android:text="이   름 : "
            android:textColor="#566270"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="20dp"
            android:text="name"
            android:textColor="#566270"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_cocktail_sugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_cocktail_name"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="55dp"
            android:text="당   도 : "
            android:textColor="#566270"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_sugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="55dp"
            android:text="sugar"
            android:textColor="#566270"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_cocktail_alcohol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/tv_cocktail_name"
            android:layout_alignParentTop="true"
            android:layout_marginTop="90dp"
            android:text="도   수 : "
            android:textColor="#566270"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_alcohol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="90dp"
            android:text="alcohol"
            android:textColor="#566270"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_cocktail_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_cocktail_name"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="125dp"
            android:text="바디감 : "
            android:textColor="#566270"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="125dp"
            android:text="body"
            android:textColor="#566270"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_cocktail_unique"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_cocktail_name"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="160dp"
            android:text="독특함 : "
            android:textColor="#566270"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_unique"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="160dp"
            android:text="unique"
            android:textColor="#566270"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_cocktail_base"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_cocktail_name"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="195dp"
            android:text="베이스 : "
            android:textColor="#566270"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_base"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="195dp"
            android:text="base"
            android:textColor="#566270"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/ingredient_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="230dp"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="290dp"
            android:text=""
            android:textColor="#566270"
            android:textSize="17sp" />

        <com.github.mikephil.charting.charts.RadarChart
            android:id="@+id/chart_radar"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="250dp">

        </com.github.mikephil.charting.charts.RadarChart>

    </RelativeLayout>

    <ToggleButton
        android:id="@+id/btn_favorite"
        android:layout_width="120dp"
        android:layout_height="126dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="126dp"
        android:layout_marginTop="561dp"
        android:layout_marginEnd="130dp"
        android:layout_marginRight="130dp"
        android:background="@drawable/ic_favorite_border"
        android:checked="false"
        android:text=""
        android:textOff=""
        android:textOn="" />


</RelativeLayout>
